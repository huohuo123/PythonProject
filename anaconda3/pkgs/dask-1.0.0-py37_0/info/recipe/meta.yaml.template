{% set version = "1.0.0" %}

package:
  name: dask
  version: "{{ version }}"

# this is a metapackage.  No source required

build:
  number: 0

requirements:
  host:
    - python

  run:
    - python
    - bokeh >=0.13.0
    - cloudpickle >=0.2.1
    - cytoolz >=0.7.3
    - dask-core {{ version }}
    - distributed >=1.25.0
    - numpy >=1.11.0
    - pandas >=0.19.0
    - partd >=0.3.8
    - toolz >=0.7.3

test:
  imports:
    - dask
    - dask.array
    - dask.bag
    - dask.bytes
    - dask.dataframe
    - dask.dataframe.tseries
    - dask.delayed
    - dask.diagnostics
    - dask.distributed
    - distributed

about:
  home: http://github.com/dask/dask/
  license: BSD 3-Clause
  summary: 'Parallel Python with task scheduling'
  description: |
    Dask is a flexible parallel computing library for analytic computing.
  doc_url: https://dask.pydata.org/
  doc_source_url: https://github.com/dask/dask/blob/master/docs/source/index.rst
  dev_url: https://github.com/dask/dask

extra:
