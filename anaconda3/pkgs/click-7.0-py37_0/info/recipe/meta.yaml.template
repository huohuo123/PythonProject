{% set version = "7.0" %}

package:
  name: click
  version: {{ version }}

source:
  url: https://pypi.io/packages/source/C/Click/Click-{{ version }}.tar.gz
  sha256: 5b94b49521f6456670fdb30cd82a4eca9412788a93fa6dd6df72c94d5a8ff2d7

build:
  number: 0
  noarch: python
  script: "{{ PYTHON }} -m pip install . --no-deps --ignore-installed --no-cache-dir -vvv"

requirements:
  host:
    - python
    - pip
  run:
    - python

test:
  imports:
    - click

about:
  home: https://palletsprojects.com/p/click
  license: BSD-3-Clause
  license_file: LICENSE.rst
  license_family: BSD
  summary: 'Python composable command line interface toolkit'
  description: |
    Click is a Python package for creating beautiful command line interfaces
    in a composable way with as little code as necessary.
  dev_url: https://github.com/pallets/click
  doc_url: https://click.palletsprojects.com
  doc_source_url: https://github.com/pallets/click/blob/master/docs/index.rst

extra:
  recipe-maintainers:
    - pmlandwehr
    - ocefpaf
